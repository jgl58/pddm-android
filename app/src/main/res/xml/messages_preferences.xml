<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:defaultValue="32"
        app:entries="@array/text_size"
        app:entryValues="@array/text_size"
        app:key="size"
        app:title="TamaÃ±o"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="@color/negro"
        app:entries="@array/colores"
        app:entryValues="@array/colores_value"
        app:key="color"
        app:title="Color del texto"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="@color/blanco"
        app:entries="@array/colores_fondo"
        app:entryValues="@array/colores_fondo_value"
        app:key="background"
        app:title="Color de fondo"
        app:useSimpleSummaryProvider="true" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="bold"
        android:title="Negrita" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="italic"
        android:title="Cursiva" />


</PreferenceScreen>
